<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="10dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_imagen"
        android:layout_width="60dp"
        android:layout_height="60dp"
        app:cardCornerRadius="30dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <ImageView
            android:id="@+id/imagen_asistente"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@color/black"
            style="@style/DialogCorners"
            android:scaleType="centerCrop">

        </ImageView>

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/nombre_usuario"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Nombre de usuario"
        android:layout_marginStart="10dp"
        android:textSize="18dp"
        app:layout_constraintTop_toTopOf="parent"
        style="@style/TextAppearance.MaterialComponents.Headline6"
        app:layout_constraintStart_toEndOf="@id/cv_imagen">

    </TextView>

    <TextView
        android:id="@+id/nombre_empresa"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/livvic"
        android:textSize="16dp"
        app:layout_constraintBottom_toBottomOf="@id/cv_imagen"
        android:layout_marginStart="10dp"
        app:layout_constraintTop_toBottomOf="@id/nombre_usuario"
        app:layout_constraintStart_toEndOf="@id/cv_imagen"
        tools:text="Nombre empresa">

    </TextView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/livvic_thin"
        android:textSize="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="Cargo en la empresa">

    </TextView>

</androidx.constraintlayout.widget.ConstraintLayout>